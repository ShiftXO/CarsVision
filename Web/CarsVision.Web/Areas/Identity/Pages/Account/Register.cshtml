@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-6">
            <div class="row justify-content-center mb-3">
                <h3>Register</h3>
            </div>
            <div class="col">
                <h4>Create a new account.</h4>
                <i class="small registerToggle" id="toggle" onclick="ToggleRegisterForm()">register as dealer?</i>
            </div>
            <form asp-route-returnUrl="@Model.ReturnUrl" method="post" id="normal" enctype="multipart/form-data">
                <hr />
                <div asp-validation-summary="All" class="text-danger"></div>
                <input type="hidden" asp-for="Input.Type" value="normal" />
                <div class="form-group">
                    <label asp-for="Input.Email"></label>
                    <input asp-for="Input.Email" class="form-control" />
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Input.PhoneNumber"></label>
                    <input asp-for="Input.PhoneNumber" class="form-control" />
                    <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Input.Password"></label>
                    <input asp-for="Input.Password" class="form-control" />
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Input.ConfirmPassword"></label>
                    <input asp-for="Input.ConfirmPassword" class="form-control" />
                    <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                </div>
                <button type="submit" class="btn btn-primary btn-block">Register</button>
            </form>
            <form asp-route-returnUrl="@Model.ReturnUrl" method="post" style="display:none" id="dealership" enctype="multipart/form-data">
                <hr />
                <div asp-validation-summary="All" class="text-danger"></div>
                <input type="hidden" asp-for="Input.Type" value="dealership" />
                <div class="form-group">
                    <label asp-for="Input.Email"></label>
                    <input asp-for="Input.Email" class="form-control" />
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <div class="form-group dealer">
                    <label asp-for="Input.DealershipName"></label>
                    <input asp-for="Input.DealershipName" class="form-control" />
                    <span asp-validation-for="Input.DealershipName" class="text-danger"></span>
                </div>
                <div class="form-group dealer">
                    <label asp-for="Input.Location"></label>
                    <input asp-for="Input.Location" class="form-control" />
                    <span asp-validation-for="Input.Location" class="text-danger"></span>
                </div>
                <div class="form-group dealer">
                    <label asp-for="Input.FullAddress"></label>
                    <input asp-for="Input.FullAddress" class="form-control" />
                    <span asp-validation-for="Input.FullAddress" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Input.PhoneNumber"></label>
                    <input asp-for="Input.PhoneNumber" class="form-control" />
                    <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Input.Description"></label>
                    <input asp-for="Input.Description" class="form-control" />
                    <span asp-validation-for="Input.Description" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Input.Password"></label>
                    <input asp-for="Input.Password" class="form-control" />
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Input.ConfirmPassword"></label>
                    <input asp-for="Input.ConfirmPassword" class="form-control" />
                    <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                </div>

                <div class="form-group dealer">
                    <label asp-for="Input.LogoPicture"></label>
                    <input asp-for="Input.LogoPicture" class="form form-control-file" />
                    <span asp-validation-for="Input.LogoPicture" class="text-danger"></span>
                </div>
                <button type="submit" class="btn btn-primary btn-block">Register</button>
            </form>
        </div>
